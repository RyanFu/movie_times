<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_check"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" 
    android:background="@color/black">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:orientation="vertical" >
        <TextView 
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
	        android:text="電影時刻表 X EZ訂 訂票系統"
	        android:textColor="@color/main_color_yellow"
	        android:textSize="16dp"
	        android:gravity="center"/>
        
        <ImageView
            android:id="@+id/image_ez"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/ezding_2" />

        <TextView android:id="@+id/notice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="以下僅提供訂票連結，任何訂票疑問請洽該網站，謝謝！"
            android:textColor="@color/main_color_yellow"
            android:textSize="13dp"
            android:gravity="center"/>
        
	    <ImageView android:id="@+id/image_viewshow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/viewshow" />
	    
        <ImageView android:id="@+id/image_amb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/amb" />
      
	    <ImageView android:id="@+id/image_miramar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/miramar" />
              
        <ImageView android:id="@+id/image_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/in"/>
        
        <ImageView android:id="@+id/image_sbc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/sbc" />  
              
        <ImageView android:id="@+id/image_lie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/lie" />
                   
        <ImageView android:id="@+id/image_westin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/westin" />
              
        <ImageView android:id="@+id/image_dingok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ding_image_background"
            android:padding="2dp"
            android:src="@drawable/dingok" />
        
    </LinearLayout>
</ScrollView>