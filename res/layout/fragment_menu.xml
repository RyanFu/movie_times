<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/color_grey_b"
           android:orientation="vertical" >
           <LinearLayout android:id="@+id/ll_movieinfo"
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_item_mark_height"
               android:orientation="horizontal"
               android:clickable="false">
               <ImageView
                   android:layout_width="@dimen/menu_fragment_item_imagetsize"
                   android:layout_height="@dimen/menu_fragment_item_imagetsize"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:contentDescription="@null"
                   android:background="@drawable/movieinformation"
                   android:scaleType="fitCenter" />
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_item_text_margin"
                   android:text="電影資訊"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white" />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a" 
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"/>
           <LinearLayout android:id="@+id/ll_oneround"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <View  android:id="@+id/v_oneround"
                  android:layout_width="@dimen/menu_fragment_item_mark_width"
                  android:layout_height="@dimen/menu_fragment_item_mark_height"
                  android:background="@color/color_yellow_d"
                  android:visibility="invisible" />
            	<TextView android:id="@+id/tv_oneround"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                  android:text="首輪電影"
                  android:textSize="@dimen/menu_fragment_item_textsize"
                  android:textColor="@color/white"/>
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp" />
           <LinearLayout android:id="@+id/ll_tworound"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
                <View  android:id="@+id/v_tworound"
                   android:layout_width="@dimen/menu_fragment_item_mark_width"
                   android:layout_height="@dimen/menu_fragment_item_mark_height"
                   android:background="@color/color_yellow_d"
                   android:visibility="invisible" />
             	<TextView android:id="@+id/tv_tworound"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:text="二輪電影"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white"/>
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a" 
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"/>
           <LinearLayout android:id="@+id/ll_comeing"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
                <View  android:id="@+id/v_comeing"
                   android:layout_width="@dimen/menu_fragment_item_mark_width"
                   android:layout_height="@dimen/menu_fragment_item_mark_height"
                   android:background="@color/color_yellow_d"
                   android:visibility="invisible" />
             	<TextView android:id="@+id/tv_comeing"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:text="近期上映"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white" />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp" />
           <LinearLayout android:id="@+id/ll_week"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal" >
                <View  android:id="@+id/v_week"
                   android:layout_width="@dimen/menu_fragment_item_mark_width"
                   android:layout_height="@dimen/menu_fragment_item_mark_height"
                   android:background="@color/color_yellow_d"
                   android:visibility="invisible" />
             	<TextView android:id="@+id/tv_week"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:text="本週新片"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white" />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp" />
           <LinearLayout android:id="@+id/ll_tvtime"
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_item_mark_height"
               android:orientation="horizontal">
               <ImageView android:id="@+id/iv_tvtime"
                   android:layout_width="@dimen/menu_fragment_item_imagetsize"
                   android:layout_height="@dimen/menu_fragment_item_imagetsize"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:contentDescription="@null"
                   android:background="@drawable/tvtime_normal"
                   android:scaleType="fitCenter"/>
               <TextView android:id="@+id/tv_tvtime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_item_text_margin"
                   android:text="電視時刻"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white" />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp" />
           <LinearLayout android:id="@+id/ll_theater"
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_item_mark_height"
               android:orientation="horizontal">
               <ImageView android:id="@+id/iv_theater"
                   android:layout_width="@dimen/menu_fragment_item_imagetsize"
                   android:layout_height="@dimen/menu_fragment_item_imagetsize"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:contentDescription="@null"
                   android:background="@drawable/theater_normal"
                   android:scaleType="fitCenter" 
                    />
               <TextView android:id="@+id/tv_theater"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_item_text_margin"
                   android:text="戲院資訊"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white"
                   />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a" 
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"/>
           <LinearLayout android:id="@+id/ll_myfavorite"
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_item_mark_height"
               android:orientation="horizontal">
               <ImageView android:id="@+id/iv_myfavorite"
                   android:layout_width="@dimen/menu_fragment_item_imagetsize"
                   android:layout_height="@dimen/menu_fragment_item_imagetsize"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:contentDescription="@null"
                   android:background="@drawable/liketheater_normal"
                   android:scaleType="fitCenter" 
                   />
               <TextView android:id="@+id/tv_myfavorite" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_item_text_margin"
                   android:text="最愛戲院"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white" />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_divider"
               android:background="@color/color_white_a"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp" />
           <LinearLayout android:id="@+id/ll_setting"
               android:layout_width="match_parent"
               android:layout_height="@dimen/menu_fragment_item_mark_height"
               android:orientation="horizontal">
               <ImageView android:id="@+id/iv_setting"
                   android:layout_width="@dimen/menu_fragment_item_imagetsize"
                   android:layout_height="@dimen/menu_fragment_item_imagetsize"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_margin_rl"
                   android:contentDescription="@null"
                   android:background="@drawable/aboutus_normal"
                   android:scaleType="fitCenter" />
               <TextView android:id="@+id/tv_setting"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/menu_fragment_item_text_margin"
                   android:text="關於我們"
                   android:textSize="@dimen/menu_fragment_item_textsize"
                   android:textColor="@color/white" />
           </LinearLayout>
	    
	</LinearLayout>

</ScrollView>
