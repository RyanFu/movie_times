<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use grey -->
    <item android:state_selected="true">
        <shape>
            <gradient   
		        android:startColor="@color/tab_press_bg_light"  
		        android:endColor="@color/tab_press_bg_dark"  
		        android:angle="270" /> 
		    <corners 
                android:topLeftRadius="6dp" 
                android:topRightRadius="6dp" />
        </shape>
        </item>
    <!-- When not selected, use white -->
    <item >
        <shape>  
            <gradient   
                android:startColor="@color/tab_normal_bg_light"  
                android:endColor="@color/tab_normal_bg_dark"  
                android:angle="270" /> 
            <corners 
                android:topLeftRadius="6dp" 
                android:topRightRadius="6dp" />
        </shape>
    </item> 
</selector>