<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item 
        android:top="0.5dp" 
        android:right="0.5dp"
        android:left="0.5dp">
        <shape android:shape="rectangle">  
            <gradient   
                android:startColor="@color/tab_info_normal_bg_light"  
                android:endColor="@color/tab_info_normal_bg_dark"  
                android:angle="270" />
            <padding 
                android:left="2dp"
                android:top="5dp"
                android:bottom="5dp" /> 
            <corners 
                android:topLeftRadius="2dp" 
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp" />
        </shape>
    </item>
</layer-list>