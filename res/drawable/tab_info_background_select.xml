<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item 
        android:top="1dp" 
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_normal_bg_dark" />
            <corners 
                android:topLeftRadius="3dp" 
                android:topRightRadius="3dp"
                android:bottomLeftRadius="3dp"
                android:bottomRightRadius="3dp" />
        </shape>
    </item>
    <item 
        android:top="3dp" 
        android:right="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <gradient   
                android:startColor="@color/tab_info_press_bg_light"  
                android:endColor="@color/tab_info_press_bg_dark"  
                android:angle="270" />
            <padding 
                android:left="2dp"
                android:top="5dp"
                android:bottom="5dp" /> 
            <corners 
                android:topLeftRadius="2dp" 
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp" />
        </shape>
    </item>
</layer-list>